{{!
    @template mod_folder/tree

    Template for displaying a folder content subdirs and files tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "Folder",
        "icon": "<img src='icon' alt='alt'>",
        "hassubdirs": true,
        "isroot": true,
        "subdirs": [
            {
                "name": "File1",
                "icon": "<img src='icon' alt='alt'>",
                "hassubdirs": false,
                "subdirs": null
             }
        ]
    }
}}

{{#hassubdirs}}
    <details {{#isroot}}open{{/isroot}}{{^isroot}}{{#showexpanded}} open{{/showexpanded}}{{/isroot}}>
        <summary>
{{/hassubdirs}}
            <span>
                {{{icon}}}
            </span>
            <span>
                {{#url}}
                    <a href="{{url}}">{{{name}}}</a>
                {{/url}}
                {{^url}}
                    {{{name}}}{{#isroot}} <span class="visually-hidden">{{#str}} topleveldirectory, mod_folder {{/str}}</span>{{/isroot}}
                {{/url}}
            </span>
{{#hassubdirs}}
        </summary>
        <ul>
            {{#subdirs}}
                <li>
                    {{>mod_folder/tree}}
                </li>
            {{/subdirs}}
        </ul>
    </details>
{{/hassubdirs}}
